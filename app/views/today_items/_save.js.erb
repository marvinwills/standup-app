$("ul.today-item-errors").html("")
<% if @today_item.errors.any? %>
  <% @today_item.errors.full_messages.each do |message| %>
    $("ul.today-item-errors").append($("<li />").html("<%= message.html_safe %>"))
  <% end %>
<% else %>
  $(".standup-index").html("<%= escape_javascript(render :partial => 'standups/index') %>")
  $("#standup-modal").modal("hide")
<% end %>
