$("ul.yesterday-item-errors").html("")
<% if @yesterday_item.errors.any? %>
  <% @yesterday_item.errors.full_messages.each do |message| %>
    $("ul.yesterday-item-errors").append($("<li />").html("<%= message.html_safe %>"))
  <% end %>
<% else %>
  $(".standup-index").html("<%= escape_javascript(render :partial => "/standups/index") %>")
  $("#standup-modal").modal("hide")
<% end %>
