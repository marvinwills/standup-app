<div class="modal-header">
  <h3>Delete item</h3>
</div>
<div class="modal-body">
  <ul class="errors"></ul>
  Are you sure you wish to delete item?
</div>
<div class="modal-footer">
  <%= link_to "Yes", user_standup_item_path(current_user, @standup, @item), :method => :delete, :remote => true, 
    :class => "btn btn-danger" %>
  <%= link_to "No", "#", :class => "btn", :data => { :dismiss => "modal" } %>
</div>
