<% @standups.each do |standup| %>

  <div>
    <div><strong><%= standup.created_at.to_date %></strong></div>

    <h4>Yesterday items:</h4>
    <div class="yesterday-item-index">
        <% standup.items.yesterday_items.each do |yesterday_item| %> 
      <div id="yesterday_item_content">- 
        <%= yesterday_item.content %>
        <%= link_to "Edit", edit_user_standup_item_path(current_user, standup, yesterday_item), :remote => true %> 
        <%= link_to "Delete", user_standup_item_delete_path(current_user, standup, yesterday_item), 
        :remote => true %>
      </div>
        <% end %>
      </div>

    <%= link_to "New yesterday item", new_user_standup_item_path(current_user, standup, :type => "yesterday"), :remote => true %>

    <h4>Today items:</h4>
    <div class="today-item-index">
      <% standup.items.today_items.each do |today_item| %>
      <div id="today_item_content">- 
        <%= today_item.content %>
        <%= link_to "Edit", edit_user_standup_item_path(current_user, standup, today_item), :remote => true %> 
        <%= link_to "Delete", user_standup_item_delete_path(current_user, standup, today_item), :remote => true %>
      </div>
      <% end %>
    </div>
    
    <%= link_to "New today item", new_user_standup_item_path(current_user, standup, :type => "today"), :remote => true %><br>
  </div>
<% end %>